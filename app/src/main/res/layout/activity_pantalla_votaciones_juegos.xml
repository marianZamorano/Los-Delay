<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <View
        android:id="@+id/fondovotaciones"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        app:layout_constraintTop_toTopOf="parent"
        android:background="@color/rosabebe"
        />

    <TextView
        android:id="@+id/votaciones"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Votaciones"
        android:textColor="@color/blanco"
        android:textSize="35sp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="10dp"
        app:layout_constraintLeft_toLeftOf="parent"/>

    <ImageView
        android:layout_width="70dp"
        android:layout_height="80dp"
        android:src="@drawable/buton_listo2"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginEnd="10dp"
        app:layout_constraintTop_toTopOf="parent"
        />

    <ScrollView
        android:id="@+id/scrollvotaciones"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/fondovotaciones">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/parent2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
            <ImageView
                android:id="@+id/like"
                android:layout_width="90dp"
                android:layout_height="50dp"
                android:src="@drawable/boton_like"
                android:layout_marginTop="70dp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="@id/parent2"
                />
            <ImageView
                android:id="@+id/dislike"
                android:layout_width="90dp"
                android:layout_height="50dp"
                android:src="@drawable/boton_dislike"
                android:layout_marginTop="30dp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@id/like"
                />

            <TextView
                android:id="@+id/titulopelicula"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginTop="15dp"
                android:text="Monopoly"
                android:textSize="25sp"
                app:layout_constraintTop_toTopOf="@id/parent2"
                app:layout_constraintLeft_toLeftOf="@id/parent2"
                app:layout_constraintRight_toRightOf="@id/parent2"/>

            <TextView
                android:id="@+id/text_saved_data"
                android:layout_width="240dp"
                android:layout_height="40dp"
                android:layout_marginTop="30dp"
                android:layout_marginLeft="15dp"
                app:layout_constraintTop_toBottomOf="@id/titulopelicula"
                android:hint="Numero de votaciones"
                app:layout_constraintLeft_toRightOf="@id/like"
                android:background="@drawable/stroke"

                />

            <TextView
                android:id="@+id/text_saved_data2"
                android:layout_width="240dp"
                android:layout_height="40dp"
                android:layout_margin="16dp"
                android:background="@drawable/stroke"
                android:hint="Numero de votaciones"
                app:layout_constraintLeft_toRightOf="@id/dislike"
                app:layout_constraintTop_toBottomOf="@id/text_saved_data" />


            <TextView
                android:id="@+id/titulopelicula2"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginTop="30dp"
                android:layout_marginRight="144dp"
                android:text="60 Segundos"
                android:textSize="25sp"
                app:layout_constraintLeft_toLefttOf="@id/parent2"
                app:layout_constraintRight_toRightOf="@id/parent2"
                app:layout_constraintTop_toBottomOf="@id/text_saved_data2" />

            <ImageView
                android:id="@+id/like1"
                android:layout_width="90dp"
                android:layout_height="50dp"
                android:src="@drawable/boton_like"
                android:layout_marginTop="70dp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@id/dislike"
                />
            <ImageView
                android:id="@+id/dislike1"
                android:layout_width="90dp"
                android:layout_height="50dp"
                android:src="@drawable/boton_dislike"
                android:layout_marginTop="30dp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@id/like1"
                />



            <TextView
                android:id="@+id/text_saved_data3"
                android:layout_width="240dp"
                android:layout_height="40dp"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="30dp"
                app:layout_constraintTop_toBottomOf="@id/titulopelicula2"
                android:hint="Numero de votaciones"
                app:layout_constraintLeft_toRightOf="@id/like"
                android:background="@drawable/stroke"

                />

            <TextView
                android:id="@+id/text_saved_data4"
                android:layout_width="240dp"
                android:layout_height="40dp"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="34dp"
                android:background="@drawable/stroke"
                android:hint="Numero de votaciones"
                app:layout_constraintLeft_toRightOf="@id/dislike"
                app:layout_constraintTop_toBottomOf="@id/text_saved_data3" />





            <TextView
                android:id="@+id/titulopelicula3"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginTop="20dp"
                android:text="Uno"
                android:layout_marginRight="130dp"
                android:textSize="25sp"
                app:layout_constraintTop_toBottomOf="@id/text_saved_data4"
                app:layout_constraintLeft_toLefttOf="@id/parent2"
                app:layout_constraintRight_toRightOf="@id/parent2" />

            <ImageView
                android:id="@+id/like2"
                android:layout_width="90dp"
                android:layout_height="50dp"
                android:src="@drawable/boton_like"
                android:layout_marginTop="70dp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@id/dislike1"
                />
            <ImageView
                android:id="@+id/dislike3"
                android:layout_width="90dp"
                android:layout_height="50dp"
                android:src="@drawable/boton_dislike"
                android:layout_marginTop="30dp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@id/like2"
                />



            <TextView
                android:id="@+id/text_saved_data5"
                android:layout_width="240dp"
                android:layout_height="40dp"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="30dp"
                app:layout_constraintTop_toBottomOf="@id/titulopelicula3"
                android:hint="Numero de votaciones"
                app:layout_constraintLeft_toRightOf="@id/like2"
                android:background="@drawable/stroke"

                />

            <TextView
                android:id="@+id/text_saved_data6"
                android:layout_width="240dp"
                android:layout_height="40dp"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="34dp"
                android:background="@drawable/stroke"
                android:hint="Numero de votaciones"
                app:layout_constraintLeft_toRightOf="@id/dislike3"
                app:layout_constraintTop_toBottomOf="@id/text_saved_data5" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>